@model RegisterDriverViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/CustomTheme.css">


    <style>
        body, html {
            margin: 0px;
            padding: 0px;
        }

        body { height: 100vh; }
    </style>

</head>
<body>

<div class="d-flex h-100 justify-content-center align-items-center font-monospace ">

    <div class="  p-4  rounded-4 w-50">

        <form method="post">


            <p class="text-danger">Fill In All The Fields</p>
            <hr>

            <div class="d-flex justify-content-around w-100">
                <div >
                    <h4>Driver Details</h4>
                    <hr>

                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>


                    <label asp-for="LastName" class="form-label mt-1">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>

                    <label asp-for="Email" class="form-label mt-1">Email</label>
                    <input asp-for="Email" type="text" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label asp-for="PhoneNumber" class="form-label mt-1">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    <label asp-for="Password" class="form-label mt-1">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>


                    <label asp-for="ConfirmPassword" class="form-label mt-1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>


                </div>

                <div class="mx-4" style="width: 2px; background: black"></div>


                <div>
                    <h4>Cab Details</h4>
                    <hr>
                    <label asp-for="CabName" class="form-label">Cab Name</label>
                    <input asp-for="CabName" type="text" class="form-control">
                    <span asp-validation-for="CabName" class="text-danger"></span>


                    <label asp-for="CabType" class="form-label mt-1">Cab Type</label>
                    <input asp-for="CabType" type="text" class="form-control">
                    <span asp-validation-for="CabType" class="text-danger"></span>

                    <label asp-for="LicenseNumber" class="form-label mt-1">License Number</label>
                    <input asp-for="LicenseNumber" type="text" class="form-control">
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>

                    <label asp-for="RcNumber" class="form-label mt-1">R C Number</label>
                    <input asp-for="RcNumber" type="text" class="form-control">
                    <span asp-validation-for="RcNumber" class="text-danger"></span>

                    <label asp-for="CabLocation" class="form-label mt-1">Work Location</label>
                    <input asp-for="CabLocation" type="text" class="form-control">
                    <span asp-validation-for="CabLocation" class="text-danger"></span>

                </div>
            </div>
            <hr>
            <div class="d-flex justify-content-end">
                <button class="btn btn-success p-3" type="submit">Register</button>
            </div>
        </form>


    </div>


</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>