@model RegisterUserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/CustomTheme.css">


    <style>
        body, html {
            margin: 0px;
            padding: 0px;
        }

        body { height: 100vh; }
    </style>

</head>
<body>

<div class="d-flex h-100 justify-content-center align-items-center font-monospace ">


    <div class=" p-4 w-25 rounded-4">

        <hr>
        <h4>Register As New User</h4>
        <p class="text-danger">Fill in All Fields</p>
        <hr>
        <form method="post">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>


            <label asp-for="LastName" class="form-label mt-1">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>

            <label asp-for="Email" class="form-label mt-1">Email</label>
            <input asp-for="Email" type="text" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="PhoneNumber" class="form-label mt-1">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <label asp-for="Password" class="form-label mt-1">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="ConfirmPassword" class="form-label mt-1">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>


            <hr>
            <div class="d-flex justify-content-end">
                <button class="btn btn-success" type="submit">Register</button>
            </div>

            <div asp-validation-summary="All"></div>

        </form>

    </div>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>