@model RegisterDriverViewModel


<div class=" p-5">

    <div class="d-flex justify-content-end  py-4">

        <input type="button" value="Delete Account" class="btn btn-danger">
    </div>
    <hr>
    <div class="d-flex justify-content-center">
        <img src="https://www.sainik.telangana.gov.in/images/rswo-profilepic.png" alt="" class="img-fluid rounded-circle" width="150px">
    </div>
    <hr>
    <form method="post">

        <div class="d-flex ">


            <div>

                <label class="form-label">Cab Name</label>
                <input asp-for="CabName" type="text" class="form-control">
                <span asp-validation-for="CabName" class="text-danger"></span>


                <label class="form-label">Cab Type</label>
                <select class="form-select" asp-for="CabType">
                    <option value="Sedan">Sedan</option>
                    <option value="Hatch Back"> Hatch Back</option>
                    <option value="SUV">SUV</option>
                    <option value="MUV">MUV</option>
                    <option value="Coupe">Coupe</option>
                    <option value="Convertible">Convertible</option>
                </select>
                <span asp-validation-for="CabType" class="text-danger"></span>


                <label asp-for="CabLocation" class="form-label">Work Location</label>
                <input asp-for="CabLocation" type="text" class="form-control">
                <span asp-validation-for="CabLocation" class="text-danger"></span>


                <label asp-for="LicenseNumber" class="form-label">License Number</label>
                <input asp-for="LicenseNumber" type="text" class="form-control" readonly>
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>


                <label asp-for="RcNumber" class="form-label">Rc Number</label>
                <input asp-for="RcNumber" type="text" class="form-control" readonly>


            </div>

            <div class="mx-5" style="width: 1px; background: black"></div>

            <div class="mx-4">
                <label class="form-label">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>


                <label class="form-label">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>


                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>


                <label asp-for="PhoneNumber" class="form-label">Phone number</label>
                <input asp-for="PhoneNumber" type="text" class="form-control">

                <input asp-for="ApplicationUserID" type="text" class="form-control" hidden>

                <div class="d-flex justify-content-end pt-4">
                    <input type="submit" value="Update Details" class="btn btn-info">

                </div>
            </div>


        </div>

    </form>

</div>