@model IEnumerable<RegisterDriverViewModel>


<div class="d-flex   justify-content-around  container">



    <div class="w-100 p-2">


        <table id="example" class="table table-striped table-hover" style="width: 100%">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Starting Point</th>
                    <th>Destination</th>
                    <th>Contact Number</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @try
                {
                    @foreach (var i in @Model)
                    {
                        <tr>
                            <td>@i.FirstName</td>
                            <td>@i.Source </td>
                            <td>@i.Destination</td>
                            <td>@i.PhoneNumber</td>

                            <td>
                                <a class="btn btn-primary" asp-area="Driver" asp-controller="Home" asp-action="SetBookingStatus" asp-route-bookingId="@i.BookingId" asp-route-bookingStatusId="1">Accept</a>
                            </td>
                            
                            <td>
                                <a class="btn btn-danger" asp-area="Driver" asp-controller="Home" asp-action="SetBookingStatus" asp-route-bookingId="@i.BookingId" asp-route-bookingStatusId="0">Reject</a>
                            </td>
                        </tr>
                    }
                }
                catch (Exception e)
                {
                    Console.WriteLine(e);
                }



            </tbody>
        </table>


    </div>

</div>