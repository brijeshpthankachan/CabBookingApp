@model IEnumerable<UserDriverViewModel>

@{
    Layout = "_userLayout";
}


<div class="d-flex   container-fluid justify-content-around pt-3">


    <div class="d-flex container  align-items-center " style="margin-left: 30px">

        <div class="d-flex p-3 justify-content-around ">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="d-flex flex-column justify-content-center ">
                    <label class="form-label">Where From?</label>
                    <input type="text" class="form-control" name="location" id="location">
                    <div class="d-flex justify-content-end pt-3">
                        <button class="btn btn-outline-warning" type="submit" value="Index">Search</button>

                    </div>
                </div>
            }


        </div>
    </div>


    <div class="w-100 pt-3 mt-2">


        <table id="example" class="table table-striped table-hover" style="width: 100%">
            <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @try
            {


                 
                @foreach (var i in @Model)
                {
                    <tr>
                        <td>@i.FirstName @i.LastName </td> <td>@i.CabName</td> <td>@i.CabType</td>
                        <td >
                            <a class="btn btn-outline-primary" asp-action="Booking" asp-controller="Home" asp-area="User" asp-route-driverId="@i.ApplicatioUserId" asp-route-userId="@i.UserId" asp-route-cabName="@i.CabName" asp-route-cabType="@i.CabType" asp-route-firstName="@i.FirstName" asp-route-lastName="@i.LastName" asp-route-phoneNumber="@i.PhoneNumber">Book Now</a>
                        </td>
                    </tr>
                }
            }
            catch (Exception e)
            {
                Console.WriteLine(e);
                <h3>Nothing To Show</h3>
            }



            </tbody>
        </table>


    </div>

</div>